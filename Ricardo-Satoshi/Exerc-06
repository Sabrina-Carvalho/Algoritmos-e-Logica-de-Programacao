// Calcule e mostre a soma dos números pares e quantidade de números ímpares entre 1 e 500.

Algoritmo "Cont-Impar-Som-Par"

Var
	par, impar, num: inteiro

Inicio
    num <- 0
    par <- 0
    impar <- 0
    Para num de 1 ate 500 passo num+1 Faça
	    Se num MOD 2 = 0 então
		    par <- par + num
	    Senão
		    impar <- impar + 1
	    Fimse
    Fimpara
    Escreval ("Soma dos nºs pares: ", par)
    Escreval ("Soma da quantidade de nºs ímpares: ", impar)
    Fimalgoritmo